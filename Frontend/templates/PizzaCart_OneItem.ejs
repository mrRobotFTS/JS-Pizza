<div class="myOrder">
    <img class="pizzaIconInOrder" alt="Піца" src="<%=pizza.icon%>">
    <p>
        <span class="order-title"><%= pizza.title%> <%if(pizza.hasOwnProperty("big_size")){%>(<%=nameSize%>)<%} %></span>
    </p>
    <div class="orderCharacteristics">
        <img class="orderSizeIcon" src="assets/images/size-icon.svg">
        <span class="orderSize"><%=pizza[size].size%></span>
        <img class="orderWeightIcon" src="assets/images/weight.svg">
        <span class="orderWeight"><%=pizza[size].weight%></span>
    </div>
    <div class="price-box">
        <span class="price"><%= pizza[size].price %>грн</span>
        <div class="minus btn btn-xs btn-danger btn-circle" >
            <i class="glyphicon glyphicon-minus"></i>
        </div>
        <span class="label order-pizza-count" style="color:black;"><span class="labelPizzaOrder" style="display:none">x</span><%= quantity %></span>
        <div class="plus btn btn-xs btn-success btn-circle" >
            <i class="glyphicon glyphicon-plus "></i>
        </div>
        <div class="removeButton count-clear btn btn-xs btn-default btn-circle" >
            <i class="glyphicon glyphicon-remove"></i>
        </div>
    </div>
</div>